@using Microsoft.Identity.Web
@using MudBlazor
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudText>Hello, @context.User.Identity?.Name!</MudText>
            <MudButton Variant="Variant.Text" OnClick="SignOut">Sign Out</MudButton>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Text" OnClick="SignIn">Sign In</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void SignIn() => Navigation.NavigateTo("MicrosoftIdentity/Account/SignIn", true);
    private void SignOut() => Navigation.NavigateTo("MicrosoftIdentity/Account/SignOut", true);
}